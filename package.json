{
  "name": "pixlr",
  "version": "1.0.0",
  "description": "Pixlr lets people manipulate a 64x64 Led panel via a web app",
  "main": "server.js",
  "scripts": {
    "build": "browserify -t [ babelify --presets [ react ] ] -t [ envify --NODE_ENV production  ] ./client/app.jsx --outfile ./public/js/app.js",
    "build-stage": "browserify -t [ babelify --presets [ react ] ] -t [ envify --NODE_ENV development  ] ./client/app.jsx --outfile ./public/js/app.js",
    "start": "node server.js",
    "prepare": "git clone --recursive git@github.com:phuongvu/pixlr.git node_modules",
    "preinstall": "git submodule update --init"
  },
  "keywords": [
    "Raspberry Pi 2",
    "Physical Web",
    "NodeJS",
    "ReactJS",
    "Websocket"
  ],
  "author": "Phuong Vu <me@phuong.vu>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.2",
    "cookie-parser": "^1.4.0",
    "debug": "^2.2.0",
    "eddystone-beacon": "^1.0.5",
    "express": "^4.13.3",
    "gm": "^1.21.1",
    "lodash": "^3.10.1",
    "mongoose": "^4.2.5",
    "morgan": "^1.6.1",
    "node-rpi-rgb-led-matrix": "git+https://github.com/phuongvu/node-rpi-rgb-led-matrix.git",
    "react": "^0.14.6",
    "react-bootstrap": "^0.28.2",
    "react-canvas": "^1.1.0",
    "react-color": "^1.3.4",
    "react-dom": "^0.14.6",
    "react-hammerjs": "^0.4.5",
    "react-tap-event-plugin": "^0.2.1",
    "redux": "^3.3.1",
    "rethinkdbdash": "^2.2.18",
    "simplex-noise": "^2.2.0",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "gulp": "^3.9.1",
    "postcss": "^5.0.16"
  }
}
